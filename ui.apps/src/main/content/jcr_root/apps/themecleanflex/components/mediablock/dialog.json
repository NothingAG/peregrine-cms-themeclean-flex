{
  "fields": [
    {
      "type": "material-radios",
      "values": [
        {
          "name": "Image",
          "value": "image"
        },
        {
          "name": "Video",
          "value": "video"
        },
        {
          "name": "Icon",
          "value": "icon"
        }
      ],
      "placeholder": "mediatype",
      "label": "Media type",
      "model": "mediatype"
    },
    {
      "type": "iconbrowser",
      "placeholder": "mediaicon",
      "label": "Icon Chooser",
      "model": "mediaicon",
      "visible": "model.mediatype == 'icon'",
      "hint": "Select an icon.",
      "validator": "required",
      "families": [
        "material",
        "font awesome"
      ]
    },
    {
      "type": "material-range",
      "placeholder": "mediaiconsize",
      "label": "Icon Size",
      "model": "mediaiconsize",
      "visible": "model.mediatype == 'icon'",
      "min": 1,
      "max": 1000
    },
    {
      "type": "input",
      "inputType": "color",
      "placeholder": "mediaiconcolor",
      "label": "Icon Color",
      "model": "mediaiconcolor",
      "visible": "model.mediatype == 'icon'"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "imagesrc",
      "label": "Image Source",
      "model": "imagesrc",
      "visible": "model.mediatype == 'image'"
    },
    {
      "type": "input",
      "inputType": "text",
      "placeholder": "mediatitle",
      "label": "Media Alt Text/Title",
      "model": "mediatitle"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "videosrc",
      "label": "Video Source",
      "model": "videosrc",
      "visible": "model.mediatype == 'video'"
    },
    {
      "type": "material-range",
      "placeholder": "mediawidth",
      "label": "Width",
      "model": "mediawidth",
      "min": 10,
      "max": 100
    }
  ]
}