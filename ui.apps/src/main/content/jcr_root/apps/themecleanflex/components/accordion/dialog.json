{
  "fields": [
    {
      "type": "material-radios",
      "values": [
        {
          "name": "Toggle",
          "value": "toggle"
        },
        {
          "name": "Accordion",
          "value": "accordion"
        }
      ],
      "placeholder": "toggletype",
      "label": "Collapse Style",
      "model": "toggletype"
    },
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "showtitle",
      "label": "Show Title",
      "model": "showtitle"
    },
    {
      "type": "input",
      "inputType": "text",
      "placeholder": "title",
      "label": "Title",
      "model": "title",
      "visible": "model.showtitle == 'true'"
    },
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "showmedia",
      "label": "Show Media",
      "model": "showmedia"
    },
    {
      "type": "material-radios",
      "values": [
        {
          "name": "Image",
          "value": "image"
        },
        {
          "name": "Video",
          "value": "video"
        },
        {
          "name": "Icon",
          "value": "icon"
        }
      ],
      "placeholder": "mediatype",
      "label": "Media type",
      "model": "mediatype",
      "visible": "model.showmedia == 'true'"
    },
    {
      "type": "iconbrowser",
      "placeholder": "mediaicon",
      "label": "Icon Chooser",
      "model": "mediaicon",
      "visible": "model.mediatype == 'icon' and model.showmedia == 'true'",
      "hint": "Select an icon.",
      "validator": "required",
      "families": [
        "material",
        "font awesome"
      ]
    },
    {
      "type": "material-range",
      "placeholder": "mediaiconsize",
      "label": "Icon Size",
      "model": "mediaiconsize",
      "visible": "model.mediatype == 'icon' and model.showmedia == 'true'",
      "min": 1,
      "max": 1000
    },
    {
      "type": "input",
      "inputType": "color",
      "placeholder": "mediaiconcolor",
      "label": "Icon Color",
      "model": "mediaiconcolor",
      "visible": "model.mediatype == 'icon' and model.showmedia == 'true'"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "imagesrc",
      "label": "Image Source",
      "model": "imagesrc",
      "visible": "model.mediatype == 'image' and model.showmedia == 'true'"
    },
    {
      "type": "input",
      "inputType": "text",
      "placeholder": "mediatitle",
      "label": "Media Alt Text/Title",
      "model": "mediatitle"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "videosrc",
      "label": "Video Source",
      "model": "videosrc",
      "visible": "model.mediatype == 'video' and model.showmedia == 'true'"
    },
    {
      "type": "material-range",
      "placeholder": "mediawidth",
      "label": "Width",
      "model": "mediawidth",
      "visible": "model.showmedia == 'true'",
      "min": 10,
      "max": 100
    },
    {
      "type": "material-radios",
      "values": [
        {
          "name": "Before Content",
          "value": "before"
        },
        {
          "name": "After Content",
          "value": "after"
        }
      ],
      "placeholder": "mediaposition",
      "label": "Media Position",
      "model": "mediaposition",
      "visible": "model.showmedia == 'true'"
    },
    {
      "type": "collection",
      "multifield": true,
      "fieldLabel": [
        "title",
        "value"
      ],
      "fields": [
        {
          "type": "input",
          "inputType": "text",
          "placeholder": "title",
          "label": "Title",
          "model": "title"
        },
        {
          "type": "texteditor",
          "rows": 10,
          "placeholder": "text",
          "label": "Text",
          "model": "text"
        }
      ],
      "placeholder": "accordiontoggle",
      "label": "Accordion/Toggle",
      "model": "accordiontoggle"
    }
  ]
}