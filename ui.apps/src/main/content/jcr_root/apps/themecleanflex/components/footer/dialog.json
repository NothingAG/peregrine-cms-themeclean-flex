{
  "fields": [
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "showlogo",
      "label": "Show Logo",
      "model": "showlogo"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/assets",
      "placeholder": "logo",
      "label": "Logo",
      "model": "logo",
      "visible": "model.showlogo == 'true'"
    },
    {
      "type": "input",
      "inputType": "text",
      "placeholder": "logoalttext",
      "label": "Logo Alt Text",
      "model": "logoalttext",
      "visible": "model.showlogo == 'true'"
    },
    {
      "type": "pathbrowser",
      "browserRoot": "/content/sites",
      "placeholder": "logourl",
      "label": "Logo Url",
      "model": "logourl",
      "visible": "model.showlogo == 'true'"
    },
    {
      "type": "material-range",
      "placeholder": "logosize",
      "label": "Logo Size",
      "model": "logosize",
      "visible": "model.showlogo == 'true'",
      "min": 1,
      "max": 300
    },
    {
      "type": "collection",
      "multifield": true,
      "fieldLabel": [
        "title",
        "value"
      ],
      "fields": [
        {
          "type": "input",
          "inputType": "text",
          "placeholder": "title",
          "label": "Title",
          "model": "title"
        },
        {
          "type": "texteditor",
          "rows": 10,
          "placeholder": "text",
          "label": "Text",
          "model": "text"
        }
      ],
      "placeholder": "columns",
      "label": "Columns",
      "model": "columns"
    },
    {
      "type": "input",
      "inputType": "text",
      "placeholder": "copyright",
      "label": "Copyright Text",
      "model": "copyright"
    },
    {
      "type": "materialswitch",
      "textOn": "yes",
      "textOff": "no",
      "valueOn": "true",
      "valueOff": "false",
      "placeholder": "iconcustomcolor",
      "label": "Custom Icons Color",
      "model": "iconcustomcolor"
    },
    {
      "type": "input",
      "inputType": "color",
      "placeholder": "iconcolor",
      "label": "Icon Color",
      "model": "iconcolor",
      "visible": "model.iconcustomcolor == 'true'"
    },
    {
      "type": "material-range",
      "placeholder": "iconsize",
      "label": "Icon Size",
      "model": "iconsize",
      "min": 0,
      "max": 150
    },
    {
      "type": "collection",
      "multifield": true,
      "fieldLabel": [
        "icon",
        "value"
      ],
      "fields": [
        {
          "type": "iconbrowser",
          "placeholder": "icon",
          "label": "Icon Chooser",
          "model": "icon",
          "hint": "Select an icon.",
          "required": true,
          "validator": "required",
          "families": [
            "material",
            "font awesome"
          ]
        },
        {
          "type": "pathbrowser",
          "browserRoot": "/content/sites",
          "placeholder": "url",
          "label": "Icon Url",
          "model": "url"
        },
        {
          "type": "input",
          "inputType": "text",
          "placeholder": "iconalttext",
          "label": "Icon Alt Text",
          "model": "iconalttext"
        }
      ],
      "placeholder": "icons",
      "label": "Icons",
      "model": "icons"
    }
  ]
}